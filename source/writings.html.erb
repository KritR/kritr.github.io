---
title: KR Writings
---

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="my1 flex items-center">
    <span class="fit-content mx1 md-mx3 h4"><%= article.date.strftime('%e %b %y') %></span>
    <span class="mx1 hover-ul blog-link h3"><%= link_to article.title, article %></span>
  </div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
