---
title: Welcome to Middleman
---

<div class="container my4 clearfix flex justify-center">
  <div class="max-width-3 col-12 px2">
    <% if paginate && num_pages > 1 %>
      <p>Page <%= page_number %> of <%= num_pages %></p>

      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>

    <% page_articles.each_with_index do |article, i| %>
      <div class="my1 flex">
        <span class="mx4 h4"><%= article.date.strftime('%e %b %y') %></span>
        <span class="hover-ul blog-link"><%= link_to article.title, article %></span>
      </div>
    <% end %>

    <% if paginate %>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
      <% end %>
    <% end %>
  </div>

</div>
